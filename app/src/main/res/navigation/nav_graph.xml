<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_today">

    <fragment
        android:id="@+id/navigation_today"
        android:name="com.taskmaster.ui.fragments.TodayFragment"
        android:label="@string/today"
        tools:layout="@layout/fragment_today" />

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.taskmaster.ui.fragments.CalendarFragment"
        android:label="@string/calendar"
        tools:layout="@layout/fragment_calendar" />

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.taskmaster.ui.fragments.StatisticsFragment"
        android:label="@string/statistics"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.taskmaster.ui.fragments.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/dateTasksFragment"
        android:name="com.taskmaster.ui.fragments.DateTasksFragment"
        tools:layout="@layout/fragment_date_tasks" >
        <argument
            android:name="date"
            app:argType="java.util.Date" />
    </fragment>

    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.taskmaster.ui.fragments.TaskDetailFragment"
        tools:layout="@layout/fragment_task_detail" >
        <argument
            android:name="task"
            app:argType="com.taskmaster.data.entity.Task" />
    </fragment>

</navigation>
